@model ML.Carrito@{    Layout = "~/Views/Shared/_Layout.cshtml";}<h1 class="text-center">Carrito</h1>@if (Model.Materias != null && Model.Materias.Count > 0){<div class="btn-group d-flex" role="group" aria-label="Button group with nested dropdown">    <button type="button" onclick="AbrirModal()" class="btn btn-dark"><i class="fa-solid fa-money-bill"></i> Comprar</button></div><br /><table class="table table-dark table-bordered table-responsive">    <thead>        <tr class="table-secondary">            <td class="text-center">Nombre</td>            <td class="text-center">Precio</td>            <td class="text-center">Agregar</td>            <td class="text-center">Cantidad</td>            <td class="text-center">Sub Total</td>            <td class="text-center">Quitar</td>            <td class="text-center">Eliminar</td>        </tr>    </thead>    <tbody>        @foreach (ML.Materia producto in Model.Materias)        {<tr class="text-center align-middle">    <td>@producto.Nombre</td>    <td>$ @producto.Costo</td>    <td>$ @producto.Cantidad</td>    <td><a class="btn btn-success" href="@Url.Action("Add","Carrito", new {idMateria = producto.IdMateria, bandera="agregar"})"><i class="fa-solid fa-square-plus"></i></a> </td></tr>}        <tr class="table-borderless table-light">            <td colspan="5"></td>        </tr>    </tbody></table><div class="text-center">    <a type="button" class="btn btn-danger" href="@Url.Action("Vaciar", "Carrito")">Borrar todo del carrito</a></div>}{<div class="alert alert-danger" role="alert">    <p class="fs-3 fw-bold text-center"><u>No hay nada en el carrito!</u></p></div>}